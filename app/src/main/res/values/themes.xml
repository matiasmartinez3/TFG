<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.TravelWithMeApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:windowBackground">@android:color/white</item>
        <item name="android:statusBarColor">@color/quaternary_system_fill_apple</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="buttonStyle">@style/BotonGray</item>
        <item name="android:editTextPreferenceStyle">@style/EditTextApp</item>
        <item name="android:fontFamily">@font/roboto</item>

        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->

    </style>

    <style name="Theme.TravelWithMeApp" parent="Base.Theme.TravelWithMeApp" />

    <style name="BotonGray" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:backgroundTint">@color/gray_app</item>
        <item name="android:textColor">@color/white</item>

    </style>

    <style name="BotonRed" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="android:backgroundTint">@color/red_app</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="EditTextApp" parent="Theme.Material3.DayNight.NoActionBar">
        <item name="backgroundTint">@color/edittext_color</item>
    </style>

    <style name="ThemeOverlay.App.Dialog" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorSecondary">@color/blue_apple</item>
        <item name="colorPrimary">@color/blue_apple</item>
    </style>

    <style name="MaterialDatePicker" parent="@style/ThemeOverlay.Material3.MaterialCalendar">
        <item name="colorPrimary">@color/blue_apple</item>
    </style>

    <style name="WhiteCheck">
        <item name="colorAccent">@color/pink_apple</item>
    </style>
</resources>